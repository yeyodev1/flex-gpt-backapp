{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true,
    "ignore": ["/node_modules/(?!@api)"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
